<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPlanTurismo.Views.User.Register"
             xmlns:behav="clr-namespace:MauiPlanTurismo.Behaivors"
             Title="Register">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Formulario de registro"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!--   Elementos de registro 
                                    Nombre
                                    Apellidos
                                    Dirección
                                    Código Postal
                                    Población
                                    Provincia. -->

            <Label Text="Nombre" FontSize="Medium"/>
            <Entry x:Name="NameEntry" Placeholder="Introduce tu nombre">
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="3" behav:MaxLength="9" />
                </Entry.Behaviors>
            </Entry>
            <Label Text="Apellidos"/>
            <Entry x:Name="SurnameEntry" Placeholder="Introduce tus apellidos" >
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="3" behav:MaxLength="12" />
                </Entry.Behaviors>
            </Entry>
            <Label Text="Dirección"/>
            <Entry x:Name="AddressEntry" Placeholder="Introduce tu dirección" >
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="6" behav:MaxLength="25" />
                </Entry.Behaviors>
            </Entry>
            <Label Text="Código Postal"/>
            <Entry x:Name="PostalCodeEntry" Placeholder="Introduce tu código postal" >
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="4" behav:MaxLength="5" />
                </Entry.Behaviors>
            </Entry>
            <Label Text="Población"/>
            <Entry x:Name="CityEntry" Placeholder="Introduce tu población" >
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="6" behav:MaxLength="25" />
                </Entry.Behaviors>
            </Entry>
            <Label Text="Provincia"/>
            <Entry x:Name="ProvinceEntry" Placeholder="Introduce tu provincia" >
                <Entry.Behaviors>
                    <behav:ValidateMaxMinLength behav:MinLength="3" behav:MaxLength="25" />
                </Entry.Behaviors>
            </Entry>
    </VerticalStackLayout>
</ContentPage>