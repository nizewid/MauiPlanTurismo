<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPlanTurismo.Views.MainPage"
             BackgroundImageSource="planturismoinicio.png"
             Title="Planifica tus viajes">

    <ScrollView>
        <VerticalStackLayout Padding="60,0" Spacing="25">
            
            <Button  x:Name="BtnVerInformacion" Text="Ver información" BackgroundColor="#9c36b5"
                     Margin="0,500,0,0" FontSize="Medium"
                     SemanticProperties.Hint="Visualizar información app"
                     Clicked="VerInformacionClicked"
                     HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
